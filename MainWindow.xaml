<Window x:Class="tabControl1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tabControl1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>


        <TabControl>

            <TabItem Header="View1">
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                    <ContentControl>
                        <DataGrid ContentTemplate="{Binding }" >
                            액셀이랑 연결될 VM 바인딩

                        </DataGrid>
                    </ContentControl>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <Button Command="{Binding BtnCommand}" Height="30" Width="80" Margin="10" Content="Load" />
                        <Button Command="{Binding BtnCommand}" Height="30" Width="80" Margin="10" Content="Save" />
                        <Button Command="{Binding BtnCommand}" Height="30" Width="80" Margin="10" Content="Add" />
                        <Button Command="{Binding BtnCommand}" Height="30" Width="80" Margin="10" Content="Load" />

                    </StackPanel>
                </Grid>

            </TabItem>

            <TabItem Header="View2">

                 </TabItem>


               
            
            
        </TabControl>
    </Grid>
</Window>
